# Development Dockerfile for Admin App
FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY apps/admin/package*.json ./
RUN npm install

# Copy configuration files
COPY apps/admin/next.config.js ./
COPY apps/admin/tailwind.config.js ./
COPY apps/admin/postcss.config.js ./
COPY apps/admin/tsconfig.json ./
COPY apps/admin/next-env.d.ts ./

# Copy source code
COPY apps/admin/src ./src
COPY apps/admin/public ./public

# Expose port
EXPOSE 3006

# Start development server
CMD ["npm", "run", "dev"]