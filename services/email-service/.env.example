# Email Service Environment Configuration

# Server Configuration
PORT=3005
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Email Provider Configuration
# Options: smtp, sendgrid, ses
EMAIL_PROVIDER=smtp

# SMTP Configuration (when using smtp provider)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid Configuration (when using sendgrid provider)
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS SES Configuration (when using ses provider)
AWS_SES_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Email From Configuration
EMAIL_FROM_NAME=Jequex E-commerce
EMAIL_FROM_ADDRESS=noreply@jequex.com

# Redis Configuration (for queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100